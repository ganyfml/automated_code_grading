  <meta charset="utf-8">
  <title>Automated Grading System Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Automated Grading System Login">

  <!-- The styles -->
  <%= stylesheet_link_tag "bootstrap-cerulean.min" %>
  <%= stylesheet_link_tag "charisma-app" %>
  <%= stylesheet_link_tag "jquery.noty" %>
  <%= stylesheet_link_tag "noty_theme_default" %>
  <%= stylesheet_link_tag "elfinder.min" %>
  <%= stylesheet_link_tag "elfinder.theme" %>
