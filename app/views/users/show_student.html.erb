<body>
<!-- topbar starts -->
<div class="navbar navbar-default" role="navigation">
  <div class="navbar-inner">
    <button type="button" class="navbar-toggle pull-left animated flip">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="index.html">
      <img alt="Charisma Logo" src="img/logo16.ico" class="hidden-xs" />
      <span>Welcome!</span>
    </a>
    <!-- user dropdown starts -->
    <div class="btn-group pull-right">
      <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <i class="glyphicon glyphicon-user"></i><span class="hidden-sm hidden-xs"> admin</span>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#">Profile</a></li>
        <li class="divider"></li>
        <li><a href=logout>Logout</a></li>
      </ul>
    </div>
    <!-- user dropdown ends -->
    <ul class="collapse navbar-collapse nav navbar-nav top-menu">
      <li><a href="http://www.google.com/"><i class="glyphicon glyphicon-globe"></i> Visit Site</a></li>
      <li>
        <form class="navbar-search pull-left">
          <input placeholder="Search" class="search-query form-control col-md-10" name="query"
                 type="text">
        </form>
      </li>
    </ul>
  </div>
</div>
<!-- topbar ends -->
<div class="ch-container" style="width: 1200px; margin: 0 auto;">
  <div class="row">
    <noscript>
      <div class="alert alert-block col-md-12">
        <h4 class="alert-heading">Warning!</h4>
        <p>
          You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a>
          enabled to use this site.
        </p>
      </div>
    </noscript>
    <div id="content">
      <!-- content starts -->
      <div>
        <ul class="breadcrumb">
          <li>
            <a href=show_student>Home</a>
          </li>
        </ul>
      </div>
      <h2>
        Welcome, <%=@user.user_name %> &nbsp; Your Email: <%=@user.user_email %> &nbsp; Your Role: <%=@user.user_role %>
      </h2>
      <div class="row">
        <div class="box">
          <div class="box-inner">
            <div class="box-header well" data-original-title="">
              <h2><i class="glyphicon glyphicon-user"></i> Homework</h2>
            </div>
            <div class="box-content">

              <div class="dropdown">
                <h4>Course:
                <button id="course_displayed" class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  <%= @user.courses.first.course_name %>
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  <% @user.courses.each do |course| %>
                  <li id="dropdown_<%= course.id %>"><a href="#"><%= course.course_name %></a></li>
                  <% end %>
                </ul>
                </h4>
              </div>

              <% @user.courses.each do |course| %>
                  <table  id="course_<%= course.id %>"
                          class="table table-striped table-bordered bootstrap-datatable datatable responsive"
                  <% if course.id != @user.courses.first.id %>
                          style="display: none">
                  <% else %>
                            >
                  <% end %>
                <thead>
                <tr>
                  <th class="sort-alpha">Homework</th>
                  <th>Description</th>
                  <th class="sort-alpha">ReleaseTime</th>
                  <th class="sort-alpha">Deadline</th>
                  <th class="sort-alpha">Status</th>
                  <th class="sort-alpha">Grade</th>
                  <th>View</th>
                  <th>Submission History</th>
                  <th>Submit Homework</th>
                </tr>
                </thead>
                <tbody>
                <% course.homeworks.where("homeworks.hw_release_time <= CURRENT_TIMESTAMP").each do |hw|%>
                    <tr>
                          <td><%= hw.hw_name %></td>
                          <td><%= hw.hw_description %></td>
                          <td><%= hw.hw_release_time %></td>
                          <td><%= hw.hw_due_time %></td>
                          <td></td>
                          <td></td>
                          <td>
                            <a class="btn btn-success" href="student view assignment.html">
                              <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                              View
                            </a>
                          </td>
                          <td>

                            <a class="btn btn-info" href="Student submission history.html">
                              <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                              Submission Hisory
                            </a>
                          </td>
                          <td><%= link_to submit_homework_path(:course_id => course.id, :homework_id => hw.id) do%>
                                <button type="button" class="btn btn-danger">Submit</button>
                            <% end %></td>
                    </tr>
                <% end %>


                </tbody>
              </table>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div><!--/.fluid-container-->

<!-- external javascript -->
<script>
    <% @user.courses.each do |course| %>
        $('#dropdown_<%= course.id%>').click(function(){
            $('#course_displayed').html('<%= course.course_name %>')
                    .attr('aria-expanded', 'false');
            $('.open').attr('class', 'dropdown');
            $('table').hide();
            $('#course_<%= course.id %>').show();

            return false; });
    <% end %>
</script>


</body>
</html>
